<%= form_for @product, :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.text_field :category_id,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :product_name %>
    <%= f.text_field :product_name,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :product_cost %>
    <%= f.text_field :product_cost ,:class => 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :product_quantity %>
    <%= f.number_field :product_quantity,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :product_image %>
    <%= f.file_field :product_image,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :product_description %>
    <%= f.text_area :product_description,:class => 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :seller_id %>
    <%= f.text_field :seller_id ,:class => 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
